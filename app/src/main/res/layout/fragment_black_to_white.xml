<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D3D3D3"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".BlackToWhite$PlaceholderFragment">

    <Button
        android:layout_centerInParent="true"
        android:background="#000000"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/panel5" />

    <Button
        android:layout_alignBaseline="@id/panel5"
        android:layout_toLeftOf="@id/panel5"
        android:layout_marginRight="50dp"
        android:background="#000000"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/panel4"
        />

    <Button
        android:layout_alignBaseline="@id/panel5"
        android:layout_width="50dp"
        android:layout_marginLeft="50dp"
        android:layout_height="50dp"
        android:id="@+id/panel6"
        android:background="#000000"
        android:layout_toRightOf="@id/panel5"
        />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/panel1"
        android:background="#000000"
        android:layout_below="@+id/panel4"
        android:layout_alignLeft="@+id/panel4"
        android:layout_alignStart="@+id/panel4"
        android:layout_marginTop="75dp" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/panel2"
        android:background="#000000"
        android:layout_alignTop="@+id/panel1"
        android:layout_toRightOf="@+id/panel4" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#000000"
        android:id="@+id/panel3"
        android:layout_alignTop="@+id/panel2"
        android:layout_alignLeft="@+id/panel6"
        android:layout_alignStart="@+id/panel6" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#000000"
        android:id="@+id/panel8"
        android:layout_below="@+id/panel5"
        android:layout_toLeftOf="@+id/panel6"
        android:layout_marginTop="50dp" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#000000"
        android:id="@+id/panel7"
        android:layout_alignTop="@+id/panel8"
        android:layout_alignLeft="@+id/panel4"
        android:layout_alignStart="@+id/panel4" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#000000"
        android:id="@+id/panel9"
        android:layout_alignTop="@+id/panel8"
        android:layout_alignLeft="@+id/panel6"
        android:layout_alignStart="@+id/panel6" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Solve!"
        android:id="@+id/solvebutton"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Undo"
        android:id="@+id/undobutton"
        android:layout_below="@+id/solvebutton"
        android:layout_alignLeft="@+id/solvebutton"
        android:layout_alignStart="@+id/solvebutton"
        android:layout_alignRight="@+id/solvebutton"
        android:layout_alignEnd="@+id/solvebutton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:id="@+id/resetbutton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loadboardedittext"
        android:layout_above="@+id/resetbutton"
        android:layout_alignLeft="@+id/panel7"
        android:layout_alignStart="@+id/panel7"
        android:layout_alignRight="@+id/panel9"
        android:layout_alignEnd="@+id/panel9" />


</RelativeLayout>
